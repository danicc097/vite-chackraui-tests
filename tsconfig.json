{
    "exclude": ["playground_tests", "node_modules", "build", ".vscode"],
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react",
        "outDir": "./build",
        "rootDir": "./src",
        "sourceMap": true,
        "noEmitOnError": true,
        "types": ["node", "jest", "react", "react-dom", "styled-components", "react-redux"]
    },
    "include": ["src"],
    "parserOptions": {
        "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser"
}
